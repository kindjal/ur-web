
description     "ur-web service"

start on filesystem
stop on runlevel [06]

respawn

env LOG_DIR=/var/log/ur-web

pre-start script
    if [ ! -d "$LOG_DIR" ]; then
        mkdir -p "$LOG_DIR"
        chmod 755 "$LOG_DIR"
    fi
end script

script
   [ -f /etc/profile.d/tnsnames.sh ] && . /etc/profile.d/tnsnames.sh
   [ -f /etc/default/ur-web ] && . /etc/default/ur-web
   export URWEB_NAMESPACES
   exec sudo -i -u www-data /usr/bin/ur-web --fixed-port >> ${LOG_DIR}/ur-web.log 2>&1
end script
